                    <div class="image-box__content">
                        <div class="rating">
                            <div class="rating__icon">
                                {
                                    Array.from({ length: 5 }).map((_, i) => (
                                        <svg
                                            class="icon"
                                            width="40"
                                            height="40"
                                        >
                                            <use xlink:href="/sprite.svg#star-icon" />
                                        </svg>
                                    ))
                                }
                            </div>
